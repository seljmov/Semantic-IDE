<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Avalonia;assembly=Avalonia"
             xmlns:ae="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EditTest.Editor">

  <Grid>
    <Border BorderThickness="1,1,0,1" BorderBrush="#FF828790">
      <Grid>
        <ae:TextEditor Name="textEditor"
                       FontFamily="Consolas" FontSize="16"
                       ShowLineNumbers="True" SyntaxHighlighting="C++" LineNumbersForeground="Blue">
        </ae:TextEditor>
      </Grid>
    </Border>
  </Grid>
</UserControl>