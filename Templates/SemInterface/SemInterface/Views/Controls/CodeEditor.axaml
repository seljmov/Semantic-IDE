<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:edit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             x:Class="SemInterface.Views.Controls.CodeEditor">

  <edit:TextEditor Name="textEditor" SyntaxHighlighting="C++"
                   FontFamily="Consolas" FontSize="14"
                   ShowLineNumbers="True" LineNumbersForeground="Blue">
  </edit:TextEditor>
</UserControl>